{
  /********************************************************************
   * Core viewer configuration, defaults located at 'src/config.json' *
   *******************************************************************/
  "core": {
    "gateway": "../",
    "active_client": "localhost",
    "client": {
      "localhost": {
        /* The Viewer Domain from ENV variable */
        "domain": "<% XO_URI %>",
        /*
         The Path to the Viewer at given domain, so that 'domain+path+index.php' is the viewer index.
         Use null to let the system detect the path automatically.
        */
        "path": "xopat/",
        /* TODO: Not well tested */
        "metadata_server": "",
        "image_group_server": "/iipsrv/iipsrv.fcgi",
        "image_group_protocol": "`${path}?Deepzoom=${data}.dzi`",
        "image_group_preview": "`${path}?Deepzoom=${data}_files/0/0_0.jpg`",
        "data_group_server": "/iipsrv/iipsrv.fcgi",
        "data_group_protocol": "`${path}#DeepZoomExt=${data.join(\",\")}.dzi`",
        "headers": {},
        "js_cookie_expire": 365,
        "js_cookie_path": "/",
        "js_cookie_same_site": "",
        "js_cookie_secure": "",
        "secureMode": false
      }
    },
    /**
     * The Viewer Default Settings, all overrideable through params configuration.
     */
    "setup": {
      // depends on available locales in locales/ folder
      "locale": "en",
      "customBlending": false,
      "debugMode": false,
      "webglDebugMode": false,
      "scaleBar": true,
      "statusBar": true,
      "viewport": null,
      "activeBackgroundIndex": 0,
      "activeVisualizationIndex": 0,
      "grayscale": false,
      "tileCache": true,
      "preventNavigationShortcuts": false,
      "permaLoadPlugins": true,
      "bypassCookies": false,
      "theme": "auto",
      "stackedBackground": false,
      "maxImageCacheCount": 1200,
      "webGlPreferredVersion": "2.0",
      "headers": {},
      "preferredFormat": "zip",
      "fetchAsync": false
    },
    "openSeadragonPrefix": "/openseadragon/"
  },
  /*********************************************************************************
   * Plugins configuration, defaults located at 'plugins/[plugin_id]/include.json' *
   *********************************************************************************/
  "plugins": {
    "gui_annotations": {
      "permaLoad": false,
      "server": "/browser/ajax/annotations.php",
      "factories": [
        "polygon",
        "rect",
        "ellipse",
        "ruler",
        "text"
      ],
      "ioFormat": "native",
      "modalHistoryWindow": false
    },
    "custom-pages": {
      "enabled": true,
    },
    "extra-tutorials": {
      "enabled": true,
    },
    "histoviso_explain": {
      "enabled": false
    },
    "nav-tracker": {
      "enabled": false
    },
    "playground": {
      "enabled": false
    },
    "profiler": {
      "enabled": false
    },
    "recorder": {
      "enabled": true
    },
    "user-session": {
      "enabled": true
      "exportHTML": true,
      "permaLoad": true,
      "sessionServer": "/browser/ajax/session.php"
    }
  }
}
